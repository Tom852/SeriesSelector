<Window x:Class="SeriesSelector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeriesSelector"
        mc:Ignorable="d"
        Title="SeriesPicker by Tom" Height="450" Width="1600" >

    <Window.Background>
        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
            <LinearGradientBrush.GradientStops>
                <GradientStop Color="White" Offset="0"/>
                <GradientStop Color="LightBlue" Offset="1"/>
            </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="0,0,2,0">
        <Button Content="Star Trek" HorizontalAlignment="Left" Margin="125,138,0,0" VerticalAlignment="Top" Width="134" Height="71" Click="TopLaunch" Background="Black" Foreground="White" FontSize="16pt"/>
        <Button Content="2.5 Men" HorizontalAlignment="Left" Margin="125,254,0,0" VerticalAlignment="Top" Width="134" Height="72" Click="BotLaunch" Background="Aqua" FontSize="16pt"/>
        <Button Content="&lt;" HorizontalAlignment="Left" Margin="53,164,0,0" VerticalAlignment="Top" Width="20" Click="TopDec" MouseRightButtonDown="TopDec2"/>
        <Button Content="&gt;" HorizontalAlignment="Left" Margin="297,164,0,0" VerticalAlignment="Top" Width="20" Click="TopInc" MouseRightButtonDown="TopInc2"/>
        <Button Content="&lt;" HorizontalAlignment="Left" Margin="53,280,0,0" VerticalAlignment="Top" Width="20" Click="BotDec" MouseRightButtonDown="BotDec2" />
        <Button Content="&gt;" HorizontalAlignment="Left" Margin="297,280,0,0" VerticalAlignment="Top" Width="20" Click="BotInc" MouseRightButtonDown="BotInc2"/>
        <Label Content="Select a Series to play" HorizontalAlignment="Left" Margin="39,28,0,0" VerticalAlignment="Top" FontSize="24 pt"/>
        <Label Name = "LabelTop" Content="Label" HorizontalAlignment="Left" Margin="349,149,0,0" VerticalAlignment="Top" Width="1241" FontSize="28pt"/>
        <Label Name = "LabelBot" Content="Label" HorizontalAlignment="Left" Margin="349,266,0,0" VerticalAlignment="Top" Width="1241" FontSize="28pt"/>

    </Grid>
</Window>
